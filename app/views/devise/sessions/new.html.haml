.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)), html: {class: "form-signin"} do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email, "Email address", for: "inputEmail", class: "sr-only"
    = f.email_field :email, autofocus: "", placeholder: "Email address", required: "", id: "inputEmail", class: "form-control"
    = f.label :password, "Password", for: "inputPassword", class: "sr-only"
    = f.password_field :password, placeholder: "Password", require: "", id: "inputPassword", class: "form-control"
    / %label.sr-only{for: "inputEmail"} Email address
    / %input#inputEmail.form-control{autofocus: "", placeholder: "Email address", required: "", type: "email"}/
    / %label.sr-only{for: "inputPassword"} Password
    / %input#inputPassword.form-control{placeholder: "Password", required: "", type: "password"}/
    .checkbox
      %label
        %input{type: "checkbox", value: "remember-me"}/
        Remember me
    = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
    / %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Sign in
  .text-center
    %p
      Not a member?
      = link_to "Sign up now", new_user_registration_path
      / %a{href: "/users/sign_in"} Sign up now
