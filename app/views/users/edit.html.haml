.container.user-new
  = form_for @user do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :nickname, placeholder: "Username", value: "#{@user.nickname}"
            .user-image.col-md-2{ id: "js-user-image" }
              %button.btn.btn-primary Change image
              = f.file_field :avatar
          = f.email_field :email, placeholder: "E-Mail", class: "user-email", value: "#{@user.email}"
          = f.password_field :password, placeholder: "Password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "Member", value: "#{@user.member}"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile", value: "#{@user.profile}"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, cols: "30", rows: "4", placeholder: "Works", valeu: "#{@user.works}"
      .row.text-center.user-btn
        = f.submit class: "btn btn-lg btn-primary btn-block"
